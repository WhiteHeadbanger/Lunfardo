# laburo multiline
laburo grande(prefix, lista)
    si lista == 1 entonces 
        cualca resultado = [prefix + " es grande"]
    osi lista == 0 entonces 
        cualca resultado = prefix + " es grande"
    chau

    devolver resultado 
